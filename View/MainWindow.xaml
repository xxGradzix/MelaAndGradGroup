<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vmodel="clr-namespace:ViewModel;assembly=ViewModel"
        xmlns:view="clr-namespace:View"
        xmlns:view1="clr-namespace:Presentation.View"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vmodel:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vmodel:CatalogListViewModel}">
            <view:ProductMasterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmodel:UserListViewModel}">
            <view:UserMasterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmodel:EventListViewModel}">
            <view:EventMasterView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="150" Background="#EEE">
            <Button Content="Products" Command="{Binding ShowCatalogViewCommand}" Margin="5"/>
            <Button Content="Users" Command="{Binding ShowUserViewCommand}" Margin="5"/>
            <Button Content="Events" Command="{Binding ShowEventViewCommand}" Margin="5"/>
        </StackPanel>

        <ContentControl Content="{Binding SelectedViewModel}" />
    </DockPanel>
</Window>
